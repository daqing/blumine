%h4
  = milestone.name
  %span.quiet.small= milestone.due_date
  - if can? :manage, milestone
    = link_to t(:edit), edit_project_milestone_path(project, milestone), :class => :hide
    = link_to t(:delete), project_milestone_path(project, milestone), :class => :hide,
      :method => :delete, :confirm => t(:delete_confirm)

= render milestone.issues
