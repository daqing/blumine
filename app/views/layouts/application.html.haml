!!!
%html
  %head
    %meta{ :charset => "UTF-8" }
    %meta{ :'http-equiv' => "X-UA-Compatible", :content => "IE=edge" }
    = csrf_meta_tag
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %title= "#{@title + ' - ' if @title}BluMine"

    = stylesheet_link_tag 'application', :media => 'screen'
    = stylesheet_link_tag 'jquery-ui', :media => 'screen'
    = stylesheet_link_tag 'print', :media => 'print'


    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.form.js'
    = yield :head_hook

  %body{:class => "controller_#{params[:controller]} #{params[:action]}_#{params[:controller]} #{Rails.env}"}
    / render 'shared/keyboard'
    - show_flash
    #header_wrap
      = render 'shared/header'
      = render 'shared/project_panel'
      = yield :header_wrap
    #container.container
      .wrapper
        .column_wrap
          #column.column
            = render 'shared/navigation'
            .view_sidebar
              = yield :column
        .content_wrap
          #content.content= yield
      = render 'shared/footer'
      = render 'shared/common_js'
