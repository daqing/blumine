.text_actions= link_to '上传文件', new_project_upload_path(@project)
%h2 文件
.uploads
  - @uploads.each do |upload|
    .upload
      .header
        - url = upload.asset.url
        - base_name = File.basename(url)
        .size= upload.content_type
        .file= link_to base_name, url
        .size= upload.file_size
        .author= upload.user.name
